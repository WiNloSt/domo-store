{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "jsx": "preserve",
    "strictFunctionTypes": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "checkJs": true,
    "baseUrl": "."
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": ["pages/*", "utils/*", "components/*"]
}
